<?xml version="1.0" encoding="UTF-8"?>
<application xmlns="http://java.sun.com/xml/ns/javaee"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
             http://java.sun.com/xml/ns/javaee/application_6.xsd"
             version="6">

    <display-name>MusicApp</display-name>

    <!-- Module chứa file WAR -->
    <module>
        <web>
            <web-uri>exploded/com.example.music-MusicApp-web-1.0-SNAPSHOT</web-uri>
            <context-root>/musicapp</context-root>
        </web>
    </module>

    <!-- Module chứa file EJB -->
    <module>
        <ejb>com.example.music-MusicApp-ejb-1.0-SNAPSHOT.jar</ejb>
    </module>

</application>

